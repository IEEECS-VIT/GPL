console.time('sim-controller');

var day;
var path = require('path').join;
var mongo = require('mongodb').MongoClient.connect;
var mongoTeam = require(path(__dirname, '..', 'database', 'mongoTeam'));
var simControl = require(path(__dirname, '..', 'worker', 'simController'));

if(!process.env.NODE_ENV)
{
    require('dotenv').load({path: path(__dirname, '..', '.env')});
}
else
{
    var ref =
    {
        users: 'round2',
        round2: 'round3'
    };
    var op = {};
    var Heroku = require('heroku-client');
    var configure = new Heroku({token: process.env.HEROKU_API_TOKEN}).apps(process.env.HEROKU_APP_NAME).configVars().update;
}

day = parseInt(process.argv[2] || process.env.DAY);

if(day === undefined)
{
    console.log('Please enter the match day number (1-7) as an argument');
    process.exit(1);
}

mongo(process.env.MONGO, function(err, db){
    if(err)
    {
        throw err;
    }
    else
    {
        database = db;

        simControl.initSimulation(day, function (){
            console.log('Simulation of Matches for Day ' + day + ' is complete');

            op.MATCH = ref[process.env.MATCH] || 'round3';
            if(!process.argv[2] || process.env.DAY === process.argv[2])
            {
                op.DAY = ((day + 1) % 8) || (process.env.DAY === 'round3' ? 7 : 0);
            }

            if(day === 7 && process.env.MATCH !== 'round3')
            {
                mongoTeam.shortlist(function(err){
                    if(err)
                    {
                        console.error(err.message);
                    }

                    configure(op, function(err){
                        if(err)
                        {
                            console.error(err.message);
                        }

                        database.close();
                        console.timeEnd('sim-controller');
                    });
                });
            }
        });
    }
});
