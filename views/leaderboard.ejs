<html>
<head lang="en">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leaderboard | GPL</title>
    <link type="text/css" rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css"/>
    <link type="text/css" rel="stylesheet" href="/stylesheets/main.css"/>
    <link type="text/css" rel="stylesheet" href="/stylesheets/leaderboard.css"/>
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r;
            i[r] = i[r] || function () {
                        (i[r].q = i[r].q || []).push(arguments)
                    }, i[r].l = 1 * new Date();
            a = s.createElement(o),
                    m = s.getElementsByTagName(o)[0];
            a.async = 1;
            a.src = g;
            m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-57505316-2', 'auto');
        ga('send', 'pageview');

    </script>
</head>
<body>

<div id="gplheader" class="page-title hidden-xs hidden-sm hidden-md">
    <header class="banner" role="banner">
        <span><img src="/images/header-left.jpg" height="60" class="pull-left"/><img class="logo"
                                                                                     src="/images/gpllogo.png"
                                                                                     height="50"
                                                                                     class="pull-left"/><span
                    class="h2 gplheadertext">graVITas Premier League 2.0</span><img src="/images/header-right.jpg"
                                                                                    height="60"
                                                                                    class="pull-right"/></span>
    </header>
</div>

<div id="navbar-wrapper">
    <nav id="navbar"></nav>
</div>

<div class="container shadow-effect">
    <div class="row">
        <div class="col-sm-offset-3 page-header text-left">
            <h1>Leaderboard<br>
                <small class="small-class">graVITas Premier League 2.0, graVITas 2015</small>
            </h1>
        </div>
    </div>
    <% if(leaderboard[0].points === 0) { %>
    <div class="row">
        <h3 class="col-sm-offset-3 text-info">
            The Leader Board will be active as soon as the games begin!
        </h3>
    </div>
    <% } else { %>
    <div class="col-sm-offset-2 col-sm-8">
        <div class="table-responsive">
            <table class="table table-hover table-bordered">
                <thead>
                <tr>
                    <th>Rank</th>
                    <th>Team Name</th>
                    <th>Points</th>
                    <th>Matches Played</th>
                    <th>Matches Won</th>
                    <th>Net Run Rate</th>
                </tr>
                </thead>
                <tbody>
                <% for(var i = 0; i < leaderboard.length ; i++) { %>
                <tr>
                    <% if(i != 10){ %>

                    <td> <%= i + 1 %>    </td>
                    <td>  <%= leaderboard[i]._id %>    </td>
                    <td> <%= leaderboard[i].points %>  </td>
                    <td> <%= leaderboard[i].played %>  </td>
                    <td> <%= leaderboard[i].win %>     </td>
                    <td> <%= leaderboard[i].net_run_rate %> </td>

                    <% } else if(i === 10){ %>
                    <td>
                        <% var ra = "My Stats" %>
                        <%= ra %>
                    </td>
                    <td>  <%= leaderboard[i]._id %>    </td>
                    <td> <%= leaderboard[i].points %>  </td>
                    <td> <%= leaderboard[i].played %>  </td>
                    <td> <%= leaderboard[i].win %>     </td>
                    <td> <%= leaderboard[i].net_run_rate %> </td>
                    <% } %>
                </tr>
                <% } } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<footer id="footer" class="footer">
</footer>
