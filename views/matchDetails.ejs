<!DOCTYPE html>
<html>
  <head>
    <title>GPL | Match Details</title>
      <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.css">
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
      <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
      <link rel='stylesheet' href='/stylesheets/matchDetails.css' />
      <link rel="stylesheet" href="/stylesheets/main.css">
      <script type="text/javascript">
          function tog(){
              $('.row-offcanvas').toggleClass('active');
          };
          $(document).ready(function() {
              $('[data-toggle=offcanvas]').click(function() {
                  $('.row-offcanvas').toggleClass('active');
              });
          });
      </script>
  </head>
  <body>
  <div id="gplheader" class="page-title hidden-xs hidden-sm hidden-md">
      <header class="banner" role="banner">

          <span><img src="/images/header-left.jpg" height="60" class="pull-left"/><img class="logo" src="/images/gpllogo.png" height="50" class="pull-left"/><span class="h2 gplheadertext">graVITas Premier League 2.0</span><img src="/images/header-right.jpg" height="60" class="pull-right"/></span>


      </header>
  </div>

  <div id="navbar-wrapper">
      <nav id="navbar" ></nav>
  </div>
  <div class="container-fluid">
      <div class="row row-offcanvas row-offcanvas-left">
          <div class="col-sm-3 col-md-2 sidebar-offcanvas" id="sidebar" role="navigation">
              <ul class="nav nav-sidebar">
                  <li class="active"><a href="#">Matches</a></li>

                  <%for(var i=0;i<matchName.length ; i++){%>
                  <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%=matchName[i]%> <b class="caret"></b></a>
                      <ul class="dropdown-menu">
                          <li><a href="#" onclick="document.getElementById('text').innerHTML='Commentary:<br><br><%=commentary[i]%>';tog();">Commentary</a></li>
                          <li role="separator" class="divider"></li>
                          <li><a href="#" onclick="document.getElementById('text').innerHTML='ScoreCard:<br><br><%=scoreCard[i]%>';tog();">Scorecard</a></li>
                      </ul>
                  </li>
                  <%}%>

              </ul>
          </div><!--/span-->
          <div class="col-sm-9 col-md-10 main shadow">
              <!--toggle sidebar button-->
              <p class="visible-xs">
                  <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas"><i class="glyphicon glyphicon-chevron-left"></i></button>
              </p>
              <h1 class="page-header">Match Details</h1>
              <div class="container-fluid text-center" id="text"><br><br>
                  <span id="text"></span>
              </div>
          </div><!--/row-->
      </div>
  </div><!--/.container-->
  <footer id="footer" class="footer">
  </footer>
