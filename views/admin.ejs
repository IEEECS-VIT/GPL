<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <title>Admin | GPL</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href='/stylesheets/min/main.min.css' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"/>
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
            ga('create', 'UA-72985649-1', 'auto');ga('send', 'pageview');
        </script>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <p class="text-center">
                        <b>Event status:</b>
                    </p>
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered text-center">
                            <thead>
                                <tr>
                                    <th>SNo</th>
                                    <th>Item</th>
                                    <th>Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%var i = 0, ref = {'Interest': info.interest, 'Total': info.total, 'FB': info.facebook,
                                            'G+': info.google, 'Twitter': info.twitter, 'Local': info.local,
                                            'Empty team': info.emptyTeam, 'Empty squad': info.emptySquad,
                                            'Forgot password': info.forgot.password, 'Forgot user': info.forgot.user};%>
                                <% for(var arg in ref) {%>
                                    <tr>
                                        <td><%= ++i %></td>
                                        <td><%= arg %></td>
                                        <td><%= ref[arg] %></td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <p class="text-center"><b>Features:</b></p>
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered text-center">
                            <thead>
                                <tr>
                                    <th>SNo</th>
                                    <th>User</th>
                                    <th>Feature</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(i = 0; i < info.features.length; ++i) {%>
                                    <tr>
                                        <td><%= i + 1 %></td>
                                        <td><%= info.features[i].user %></td>
                                        <td><%= info.features[i].features %></td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <p class="text-center"><b>Database:</b></p>
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered text-center">
                            <thead>
                                <tr>
                                    <th>SNo</th>
                                    <th>Item</th>
                                    <th>Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%i = 0; ref = {'Name': info.database.db, 'Collections': info.database.collections, 'Objects': info.database.objects,
                                        'Average record size': info.database.avgObjSize, 'Total Data': info.database.dataSize, 'Net Storage': info.database.storageSize,
                                        'Extensions': info.database.numExtents, 'Indexes': info.database.indexes, 'Index size': info.database.indexSize, 'File size': info.database.fileSize,
                                        'Cluster limit': info.database.nsSizeMB, 'Data version': info.database.version
                                        };%>
                                <% for(arg in ref) {%>
                                    <tr>
                                        <td><%= ++i %></td>
                                        <td><%= arg %></td>
                                        <td><%= ref[arg] %></td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 text-center">
                    <span class="btn btn-lg btn-primary"><a href="/simulate">Simulate</a></span>
                </div>
            </div>
        </div>
    </body>
</html>
