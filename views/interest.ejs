<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Interest | GPL</title>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"/>
        <link type="text/css" rel="stylesheet" href="/stylesheets/min/main.min.css"/>
        <link type="text/css" rel="stylesheet" href="/stylesheets/min/interest.min.css"/>
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
            ga('create', 'UA-72985649-1', 'auto');ga('send', 'pageview');
        </script>
    </head>
    <body id="interest">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2 shadow-effect" id="form-container">
                    <div class="row">
                        <div class="col-xs-4">
                            <a href="http://www.facebook.com/ieeecsvit" target="_blank">
                                <img src="http://res.cloudinary.com/gpl/general/logo_nbg.png" class="img-responsive pull-left padding-2 centered margin-top-4">
                            </a>
                        </div>
                        <div class="col-xs-4">
                            <a href="http://www.facebook.com/gravitaspremierleague" target="_blank">
                                <img src="http://res.cloudinary.com/gpl/general/gpllogo.png" class="img-responsive img-60 padding-2 centered">
                            </a>
                        </div>
                        <div class="col-xs-4">
                            <a href="http://www.vitgravitas.com" target="_blank">
                                <img src="http://res.cloudinary.com/gpl/general/gravitas_15.png" class="img-responsive padding-2 pull-right margin-top-4">
                            </a>
                        </div>
                    </div>
                    <div class="col-md-10 col-md-offset-1">
                        <div class="centered">
                            <h1>graVITas Premier League 2.0</h1>
                            <p class="text-center"><span class="lead">Coming Soon!</span><br> To keep yourself updated fill in
                                the form!</p>
                        </div>
                        <form name="int" action="/interest" method="post">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
                            <div class="form-group">
                                <label for="team">Name:<i style="color:red;">*</i> </label>
                                <input type="text" class="form-control" placeholder="Name" name="name" required autofocus/>
                            </div>
                            <div class="form-group">
                                <label for="team">Registration Number: (VIT Students Only)</label>
                                <input type="text" id="team" class="form-control" value="NA" name="regno"
                                       pattern="1[2-6]\w{3}\d{4}|NA|"/>
                            </div>
                            <!--Username/Team Name -->
                            <div class="form-group">
                                <label for="mob">Mobile:<i style="color:red;">*</i> </label>
                                <input type="tel" id="mob" class="form-control" placeholder="9876543210" name="phone"
                                       required pattern="\d{10}"/>
                            </div>
                            <!-- password-->
                            <div class="form-group">
                                <label for="email">Email:<i style="color:red;">*</i> </label>
                                <input type="email" id="email" class="form-control" placeholder="example@domain.com"
                                       name="email" required/>
                            </div>
                            <input type="submit" id="button" class="btn btn-primary btn-lg centered" name="button"
                                   value="Submit"/>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
        <script async src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        <script async src="/javascript/min/main.min.js"></script>
    </body>
</html>
