                <label for="name">Enter your Name :</label>
                <input type="text" class="form-control" placeholder="Name" id="name" name="f_name">
            </div>
            <div class="form-group">
                <label for="e-mail">Enter your E-mail address :</label>
                <input type="email" class="form-control" placeholder="Email id" id="e-mail" name="f_email">
            </div>
            <div class="form-group">
                <label for="features-requested">Features Requested : </label>
                <textarea class="form-control" rows="5" id="features-requested" name="f_requests"></textarea>
            </div>
            <button type="submit" class="btn btn-primary" id="b">Submit</button>
        </form>

    </div>
</div>
